{
    "manifest_version": 3,
    "name": "Try Dom",
    "version": "1.0.0",
    "description": "A basic example extension with only required keys",
    "icons": {
        "48": "images/icons/icon-48.png",
        "128": "images/icons/icon-128.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content-script.js"
            ],
            "matches": [
                "https://*.youtube.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "bookmarks",
        "alarms",
        "notifications"
    ]
}